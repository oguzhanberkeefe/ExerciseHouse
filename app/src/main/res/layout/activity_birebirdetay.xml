<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <include layout="@layout/toolbar"
            android:id="@+id/toolbar2"/>

        <TextView
            android:id="@+id/id"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bire Bir Eğitim Programı"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView5"
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ozanardakoc"
            app:riv_corner_radius="12dp" />

        <FrameLayout
            android:id="@+id/adetframe"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_text_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adet"
                android:textColor="#6C6C6C"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/adetbirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:id="@+id/adeteksilt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_remove_24"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="250dp"/>

            <ImageView
                android:id="@+id/adetarttır"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_add_26"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="300dp"/>
        </FrameLayout>

        <Button
            android:id="@+id/sepeteekle"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="Sepete Ekle"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/button_bg2"/>
    </LinearLayout>
</ScrollView>




